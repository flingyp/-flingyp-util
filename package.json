{
  "name": "@flypeng/tool",
  "version": "5.4.0",
  "type": "module",
  "packageManager": "pnpm@8.5.1",
  "description": "Integrate a collection of common tools and methods",
  "author": "flingyp",
  "license": "MIT",
  "homepage": "https://github.com/flingyp/flypeng-tool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flingyp/flypeng-tool.git"
  },
  "bugs": "https://github.com/flingyp/flypeng-tool/issues",
  "keywords": [
    "javascript",
    "typescript",
    "modules",
    "utilities",
    "tsup",
    "vitepress"
  ],
  "exports": {
    "./browser": {
      "import": "./dist/browser/index.js",
      "node": "./dist/browser/index.mjs",
      "types": "./dist/browser/index.d.ts",
      "default": "./dist/browser/index.d.ts"
    },
    "./node": {
      "import": "./dist/node/index.js",
      "node": "./dist/node/index.mjs",
      "types": "./dist/node/index.d.ts",
      "default": "./dist/node/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "prettier . --write && eslint . && stylelint \"**/*.{css,scss,vue}\"",
    "lint:fix": "prettier . --write && eslint . --fix && stylelint --fix \"**/*.{css,scss,sass,vue}\"",
    "commit": "cz",
    "release": "standard-version",
    "first-release": "pnpm run release -- --first-release",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@flypeng/eslint-config": "2.0.0-beta.2",
    "@flypeng/stylelint-config": "1.0.2-beta.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0",
    "stylelint": "^15.11.0"
  },
  "lint-staged": {
    "*": [
      "eslint ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
