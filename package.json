{
  "name": "@flypeng/tool",
  "version": "4.0.0",
  "packageManager": "pnpm@7.18.0",
  "description": "Integrate a collection of common tools and methods",
  "main": "./dist/bundle.cjs",
  "module": "./dist/bundle.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "pnpm run build:entry && pnpm run gen-version && cross-env NODE_ENV=dev rollup --config rollup.config.ts --configPlugin typescript --watch",
    "build": "pnpm run build:entry && pnpm run gen-version && cross-env NODE_ENV=prod rollup --config rollup.config.ts --configPlugin typescript",
    "docs:dev": "pnpm run build:docs && pnpm run gen-version && pnpm run --filter docs dev",
    "docs:build": "pnpm run build:docs && pnpm run gen-version && pnpm run --filter docs build",
    "docs:preview": "pnpm run --filter docs serve",
    "gen-version": "esno ./scripts/gen-version.ts",
    "build:entry": "esno ./scripts/build-entry.ts",
    "build:docs": "esno ./scripts/build-docs.ts",
    "test": "vitest",
    "test:node": "pnpm --filter node_playground dev",
    "test:ui": "vitest --ui",
    "release": "esno ./scripts/release.ts",
    "commit": "git-cz"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "Tool",
    "YToolUse",
    "TypeScript",
    "Tool Library"
  ],
  "homepage": "https://github.com/flingyp/flypeng-tool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flingyp/flypeng-tool.git"
  },
  "bugs": "https://github.com/flingyp/flypeng-tool/issues",
  "author": "FlingYP",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.11",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "@vitest/ui": "^0.25.3",
    "chalk": "^5.1.2",
    "commitizen": "^4.2.6",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esno": "^0.16.3",
    "husky": "^8.0.2",
    "inquirer": "^9.1.4",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "rollup": "^3.6.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.5.0",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^3.2.5",
    "vitest": "^0.25.3"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --write",
      "eslint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
