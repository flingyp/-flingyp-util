{
  "name": "@flypeng/tool",
  "version": "5.3.2",
  "packageManager": "pnpm@7.18.0",
  "description": "Integrate a collection of common tools and methods",
  "author": "FlingYP",
  "license": "MIT",
  "homepage": "https://github.com/flingyp/flypeng-tool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flingyp/flypeng-tool.git"
  },
  "bugs": "https://github.com/flingyp/flypeng-tool/issues",
  "keywords": [
    "browser",
    "node",
    "library",
    "tool",
    "function"
  ],
  "exports": {
    "./browser": {
      "types": "./browser/index.d.ts",
      "import": "./browser/index.mjs",
      "node": "./browser/index.cjs",
      "default": "./browser/index.mjs"
    },
    "./node": {
      "types": "./node/index.d.ts",
      "import": "./node/index.mjs",
      "node": "./node/index.cjs",
      "default": "./node/index.mjs"
    }
  },
  "files": [
    "browser",
    "node"
  ],
  "scripts": {
    "dev": "gulp dev",
    "build": "gulp build",
    "docs:dev": "gulp docs_dev",
    "docs:build": "gulp docs_build",
    "docs:preview": "pnpm run --filter docs serve",
    "test": "vitest",
    "test:node": "pnpm run --filter=playground dev",
    "test:ui": "vitest --ui",
    "build:entry": "esno ./scripts/build-entry.ts",
    "build:docs": "esno ./scripts/build-docs.ts",
    "gen-info": "esno ./scripts/gen-info.ts",
    "release": "gulp release",
    "commit": "git-cz",
    "new": "esno ./scripts/create-hook.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@flypeng/eslint-config": "^0.0.16",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.4",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.7.0",
    "@vitest/ui": "^0.34.5",
    "chalk": "^5.3.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.50.0",
    "esno": "^0.17.0",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "inquirer": "^9.2.11",
    "lint-staged": "^14.0.1",
    "rollup": "^3.29.3",
    "rollup-plugin-dts": "^6.0.2",
    "standard-version": "^9.5.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.5"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --write",
      "eslint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
